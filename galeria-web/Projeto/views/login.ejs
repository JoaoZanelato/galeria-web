<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8"> <!-- Define o charset padrão (suporte a acentos, etc) -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Responsividade -->
    <title>Login</title> <!-- Título da aba -->

    <!-- Estilos globais da aplicação -->
    <link rel="stylesheet" href="/stylesheets/style.css">

    <!-- Estilo específico da tela de login -->
    <link rel="stylesheet" href="/stylesheets/Login.css">
</head>
<body>

    <!-- Container principal da área de autenticação -->
    <div class="auth-container">
        <div class="auth-box">
            
            <!-- Logo clicável que volta pra home -->
            <div class="logo-container">
                <a href="/"><img src="/images/logopreto.jpg" alt="Logo do Estúdio"></a>
            </div>

            <!-- Título da tela -->
            <h1>Entrar</h1>

            <!-- Exibe mensagem de erro, se houver -->
            <% if (typeof error !== 'undefined' && error) { %>
                <p class="auth-error"><%= error %></p>
            <% } %>

            <!-- Formulário de login -->
            <form action="/auth/login" method="POST">
                <!-- Campo de email -->
                <div class="input-group">
                    <input type="email" name="email" id="email" required>
                    <label for="email">Email</label>
                </div>

                <!-- Campo de senha -->
                <div class="input-group">
                    <input type="password" name="senha" id="senha" required>
                    <label for="senha">Senha</label>
                </div>

                <!-- Botão de envio do login -->
                <button type="submit" class="auth-button">Login</button>
            </form>

            <!-- Link para cadastro, caso o usuário não tenha conta -->
            <div class="auth-link">
                <p>Não tem uma conta? <a href="/auth/cadastro">Cadastre-se</a></p>
            </div>
        </div>
    </div>

</body>
</html>
