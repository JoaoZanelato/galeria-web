<header class="dashboard-header">
    <div class="logo-container">
        <a href="/">
            <img src="/images/logo.png" alt="Logo Galeria Web">
        </a>
    </div>

    <div class="search-container">
        <form action="/search" method="GET" class="search-form">
            <input type="search" name="q" placeholder="Buscar por tags, descrições..." class="search-input">
            <button type="submit" class="search-button">Buscar</button>
        </form>
    </div>

    <div class="header-user-items">
        <% if (user) { %>
            <span class="user-greeting">Olá, <%= user.nome %></span>
            <div class="user-actions">
                <a href="/amizades" class="btn btn-secondary">Amigos</a>
                
                <a href="/compartilhados" class="btn btn-primary">Compartilhados</a>
                
                <a href="/auth/logout" class="btn btn-danger">Logout</a>
            </div>
        <% } else { %>
            <div class="user-actions">
                <a href="/auth/login" class="btn btn-secondary">Entrar</a>
                <a href="/auth/cadastro" class="btn btn-primary">Cadastre-se</a>
            </div>
        <% } %>
    </div>
</header>